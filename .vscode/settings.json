{
    "search.smartCase": true,
    "code-runner.executorMap": {
        "cpp": "cd $dir && g++-7 $fileName -o $fileNameWithoutExt -Wall -Werror -std=c++11  && (echo -e \"\\033[1;31mFinish building.\\033[0m\") && time $dir$fileNameWithoutExt",
        "cpp_withfile": "cd $dir && g++-7 $fileName -o $fileNameWithoutExt -Wall -std=c++11 && (echo -e \"\\033[1;31m Finish building.\\033[0m \") && time ( $dir$fileNameWithoutExt < in.txt)",
        "python": "python3",
    },
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 17,
    "editor.tabSize": 2,
    "files.associations": {
        "cstdio": "cpp",
        "algorithm": "cpp",
        "utility": "cpp",
        "__config": "cpp",
        "__nullptr": "cpp",
        "cstddef": "cpp",
        "exception": "cpp",
        "initializer_list": "cpp",
        "new": "cpp",
        "stdexcept": "cpp",
        "type_traits": "cpp",
        "typeinfo": "cpp",
        "cfenv": "cpp",
        "*.tcc": "cpp",
        "cuchar": "cpp"
    },
    "files.defaultLanguage": "c++",
}
