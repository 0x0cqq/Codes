{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "runner": "terminal",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++-8",
            "windows": {
                "command": "g++",
                "args": [
                    "-g","-Wall","-std=c++11","${file}",
                    "-o","${fileDirname}/${fileBasenameNoExtension}.exe"
                ] 
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "args": [
                "-O2","-g","-Wall","-std=c++11","${file}",
                "-o","${fileDirname}/${fileBasenameNoExtension}.o"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "dependsOn": "Build C++",
            "command": "${fileDirname}/${fileBasenameNoExtension}.o",
            "windows": {
                "command": "${fileDirname}/${fileBasenameNoExtension}.exe"
            },
            "args": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
